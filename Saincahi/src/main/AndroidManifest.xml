<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="es.miapp.psp.saincahi">

    <!-- Permite el acceso al estado del teléfono, en este caso para obtener registro de nuestras llamadas
    telefónicas: https://developer.android.com/reference/android/Manifest.permission#READ_PHONE_STATE -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- Permite el acceso a leer el registro de llamadas del usuario:
    https://developer.android.com/reference/android/Manifest.permission#READ_CALL_LOG -->
    <uses-permission android:name="android.permission.READ_CALL_LOG" />

    <!-- Permite el acceso para leer los datos de los contactos del usuario
    https://developer.android.com/reference/android/Manifest.permission#READ_CONTACTS -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Saincahi"
        tools:ignore="AllowBackup">

        <!-- Receiver para permiso explícito-->
        <receiver
            android:name=".receptores.IncomingCallReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>

        <activity android:name=".MainActivity">

            <!-- Agregamos botón back, para volver hacia atrás -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".vistas.PermissionActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".vistas.VerFichero">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>